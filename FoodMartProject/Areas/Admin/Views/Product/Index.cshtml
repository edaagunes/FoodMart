@using FoodMartProject.Dtos.ProductDtos
@model List<ResultProductDto>
@{
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">


<body>
    <div class="container mt-5">
        <h2 class="mb-4">Ürün Listesi</h2>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Ürün ID</th>
                    <th>Ürün Adı</th>
                    <th>Stok</th>
                    <th>Fiyat</th>
                    <th>Kategori</th>
                    <th>Görsel</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.ProductStock</td>
                            <td>@product.ProductPrice.ToString("C")</td>
                            <td>@product.CategoryName</td>
                            <td>
                                <img src="@product.ProductImage" alt="Ürün Görseli" width="50" height="50" />
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-warning btn-sm">Düzenle</a>
                                <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">Sil</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">Listelenecek ürün bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("CreateProduct", "Product",new { area = "Admin" })" class="btn btn-warning btn-sm">Ekle</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
