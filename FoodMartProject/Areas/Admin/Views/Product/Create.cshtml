@model FoodMartProject.Dtos.ProductDtos.CreateProductDto

@{
	Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<h2>Ürün Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductStock" class="control-label"></label>
        <input asp-for="ProductStock" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductPrice" class="control-label"></label>
        <input asp-for="ProductPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductImage" class="control-label"></label>
        <input asp-for="ProductImage" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <input asp-for="CategoryId" class="form-control" />      
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>


