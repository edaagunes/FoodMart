@model GetByIdProductDto
@{
	ViewData["Title"] = "UpdateProduct";
	Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container  mt-5">
	<h2 class="mb-4">Ürün Güncelle</h2>
	<form asp-action="UpdateProduct" method="post">
		<input type="hidden" asp-for="ProductId" />
		<div class="form-group mb-2">
			<label class="control-label">Ürün Adı</label>
			<input asp-for="ProductName" class="form-control" />
		</div>
		<div class="form-group mb-2">
			<label class="control-label">Ürün Stok</label>
			<input asp-for="ProductStock" class="form-control" />
		</div>
		<div class="form-group mb-2">
			<label class="control-label">Ürün Fiyat</label>
			<input asp-for="ProductPrice" class="form-control" />
		</div>
		<div class="form-group mb-2">
			<label class="control-label">Ürün Görsel</label>
			<input asp-for="ProductImage" class="form-control" />
		</div>
		<div class="form-group mb-2">
			<label class="control-label">Kategori</label>
			<select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Value", "Text"))">
				<option value="">Kategori Seçin</option>
			</select>
		</div>
		<button type="submit" class="btn btn-secondary">Güncelle</button>
	</form>
</div>


