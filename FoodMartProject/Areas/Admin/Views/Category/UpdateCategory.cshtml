@model GetByIdCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}


<div class="container  mt-5">
	<h2 class="mb-4">Kategori Güncelle</h2>
	<form asp-action="UpdateCategory" method="post">
		<input type="hidden" asp-for="CategoryId"/>
		<div class="form-group mb-2">
			<label class="control-label">Kategori Adı</label>
			<input asp-for="CategoryName" class="form-control" />
		</div>
		<div class="form-group mb-2">
			<label class="control-label">Kategori İkon</label>
			<input asp-for="Icon" class="form-control" />
		</div>
		<button type="submit" class="btn btn-warning">Güncelle</button>
	</form>
</div>




