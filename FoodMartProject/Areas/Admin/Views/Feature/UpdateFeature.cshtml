@model GetByIdFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<h1>UpdateFeature</h1>
<div class="container  mt-5">
	<h2 class="mb-4">Öne Çıkan Güncelle</h2>
	<form asp-action="UpdateFeature" method="post">
		<input type="hidden" asp-for="FeatureId"/>
		<div class="form-group mb-2">
			<label class="control-label">Öne Çıkan Adı</label>
			<input asp-for="Header" class="form-control" />
		</div>
		<div class="form-group mb-2">
			<label class="control-label">Açıklama</label>
			<input asp-for="Title" class="form-control" />
		</div>
		<div class="form-group mb-2">
			<label class="control-label">Alt Açıklama</label>
			<input asp-for="SubTitle" class="form-control" />
		</div>
		<div class="form-group mb-2">
			<label class="control-label">Görsel Yolu</label>
			<input asp-for="Image" class="form-control" />
		</div>
		<button type="submit" class="btn btn-warning">Güncelle</button>
	</form>
</div>


